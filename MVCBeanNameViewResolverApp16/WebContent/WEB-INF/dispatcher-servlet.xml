<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">
 <!-- Handler mapping -->
<bean id="suhm" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    <property name="mappings">
         <props>
            <prop key="home.htm">pvc</prop>
            <prop key="list_students.htm">lsc</prop>
         </props>               
     </property>
  </bean>
  <!-- controllers -->
  <bean id="pvc"  class="org.springframework.web.servlet.mvc.ParameterizableViewController">
      <property name="viewName"  value="home"/>
  </bean>
  
  <bean id="lsc"  class="com.nt.controller.ListStudentController"/>
  <!-- views -->
  <bean id="excel_view"  class="com.nt.view.ExcelReportView"/>
  <bean id="pdf_view"  class="com.nt.view.PdfReportView"/>
  
 
   <bean id="bnvr"  class="org.springframework.web.servlet.view.BeanNameViewResolver"/>
   
     <!-- view Resolvers-->
    <bean id="vr"  class="org.springframework.web.servlet.view.InternalResourceViewResolver">
    <property  name="prefix" value="/WEB-INF/pages/"/>  
    <property  name="suffix" value=".jsp"/>
 </bean>             
 

</beans>